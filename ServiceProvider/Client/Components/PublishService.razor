@page "/publish/{ServiceId:int}"
@using BlafettisLib

<MudItem Class="d-flex justify-content-center align-items-center">
    <MudCard Class="w-75">
        <MudCardContent>
            <MudText Align="Align.Center" Typo="Typo.h2">Congrats</MudText>
            <MudText Align="Align.Center" Typo="Typo.body2">You are finally one step close of starting your own service, beginning your business and helping others.</MudText>
            <Blafettis @ref="this.blafettis" />
        </MudCardContent>
        <MudCardActions Class="d-flex justify-content-end">
            <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="this.Publish">
                Publish Service
            </MudButton>
        </MudCardActions>
    </MudCard>
</MudItem>

