@page "/skills/all-by-user"

@if (this.openCreateForm)
{
    <CreateSkill LoadSkills = "LoadSkills" />
}

<MudItem Class="d-flex my-3">
    <MudSpacer/>
    <MudButton Variant="Variant.Filled" OnClick="OpenCreateForm">Create skill</MudButton>
</MudItem>

<MudTable Items="@this.skills" Dense="false" Hover="true" Bordered="false" Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Skills</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="this.searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Nr</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Level</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nr">@(nr++)</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Level">@context.ExperienceType</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
