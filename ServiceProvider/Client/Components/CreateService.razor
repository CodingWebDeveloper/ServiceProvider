<EditForm class="rounded input-form" Model="this.model" OnValidSubmit="@this.Create">
    <div class="d-flex my-md-5 my-lg-5 my-sm-5 my-xl-5">
        <label class="mx-1">Service Title</label>
        <InputTextArea class="input justify-content-center"  @bind-Value="@this.model.Title" />
    </div>
    <div class="d-flex my-md-5 my-lg-5 my-sm-5 my-xl-5">
        <label class="mx:1">Category</label>
        <select class="custom-select justify-content-center" @onchange="@this.OnCategoryChanged" title="Category">
            <option value="Select" selected disabled="disabled">
                SELECT A CATEGORY
            </option>
            @foreach (var item in this.model.ListItems)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="d-flex my-md-5 my-lg-5 my-sm-5 my-xl-5" style="position:relative">
        <label class="mx-1 " >Description</label>
        <InputTextArea  @oninput="@this.OnValueChanged" placeholder="Enter Description..." class="input-description" @bind-Value="@this.model.Description" />
        <span class="text-black-50 position-relative" style="justify-self:flex-end">@this.descriptionLength/150</span>
    </div>
   
    <button class="btn btn-success position-absolute" style="left:85%;bottom:5%;margin-top: 10px;" >Save & Continue</button>
</EditForm>