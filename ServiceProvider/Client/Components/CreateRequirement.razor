@*<Roadmap CurrentStep="Requirements" />*@

<MudPaper Class="p-3 mt-3">
    <EditForm Model="@this.inputModel" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        <MudText Typo="Typo.body1">Give requirements to your user to ensure that they supply you with the needs of providing them with your services</MudText> 
        <MudItem Class="d-flex">
            <MudTextField @bind-Value="this.inputModel.Content" For="@(() => this.inputModel.Content)" T="string" Variant="Variant.Outlined" Label="Requirement Content" />
            <MudButton ButtonType="ButtonType.Submit" Class="ml-3" Variant="Variant.Filled" Color="Color.Success">Create</MudButton>
        </MudItem>
    </EditForm>
</MudPaper>