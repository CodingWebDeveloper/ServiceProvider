@page "/profile"
<style>
    .container {
        display: flex;
        padding: 1rem;
        box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
    }

    .img{
        width: 200px;
        height: 200px;
    }

    .row-margin-20{
        margin:2.0em;
    }

    .link-to-service
    {
        color:black;
    }

    .link-to-service:hover {
        color: limegreen;
        cursor: pointer;
    }


    .slideshow-container {
        max-width: 300px;
        position: relative;
        margin: auto;
    }


    .slides {
        display: none;
    }

    .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        margin-top: -22px;
        padding: 16px;
        color: white;
        font-weight: bold;
        font-size: 18px;
        transition: 0.6s ease;
        border-radius: 3px 0 0 3px;
        user-select: none;
    }

    .next {
        right: 0;
    }

        .prev:hover, .next:hover {
            background-color: white;
        }

    .dot {
        cursor: pointer;
        height: 15px;
        width: 15px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

        .active, .dot:hover {
            background-color: #717171;
        }

</style>
<h3>Profile</h3>

<div class="container">
    <p class="flex-grow-1">Create your service and start making money</p>
    <a class="btn btn-success d-md-inline" href="createService">Create Service</a>
</div>

<div class="row">
    @foreach (var service in this.services)
    {
    <div class="card col-md-4 rounded row-margin-20" style="min-width:initial; min-height:initial">
        @if (service.Images.Any())
        {
            <div class="slideshow-container position-relative my-2">
                @foreach (var image in service.Images)
                {
                    <div class="slides">
                        <img width="300" height="280"  src="@image.RemoteUrl" alt="SlideImage" />
                    </div>
                }
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>
            <br>
        }
        else
        {
            <div class="card-body d-flex justify-content-center align-items-center position-relative" style="width:contain">
                <div class="img d-flex flex-fill bg-secondary justify-content-center align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" height="20px" width="20px" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>
        }

        <div class="card-footer d-flex flex-column">
            <div>
                <h4 class="link-to-service" @onclick="() => this.ViewServiceInfo(service.Id)">
                   @service.Title
                </h4>
            </div>
            <div class="d-flex align-items-end" >
                <p class="flex-grow-1" style="font-size:18px; font-weight:bold; margin-top:0.75rem">Rating: @service.Rating</p>
                <div>
                    <div class="text-black-50" style="font-size:18px">STARTING AT</div>
                    $@service.StartingPrice
                </div>
            </div>
        </div>
    </div>
    }
</div>
